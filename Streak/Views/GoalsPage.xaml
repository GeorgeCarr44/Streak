<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Streak.Models"
             x:Class="Streak.GoalsPage">
        
    <FlexLayout BindableLayout.ItemsSource="{Binding Goals}" Direction="Row" Wrap="Wrap" AlignContent="Start">
        <StackLayout FlexLayout.Basis="33%" Padding="10" Spacing="10" HeightRequest="180" WidthRequest="140">
            <Button Clicked="OnItemAdded"/>
            <Label Text="Click here To add new" 
                    HeightRequest="30" 
                    FontSize="18"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
        </StackLayout>
        <BindableLayout.ItemTemplate>
            <DataTemplate>
                <StackLayout  FlexLayout.Basis="33%" Padding="10" Spacing="10" HeightRequest="180" WidthRequest="140">
                    <Button />
                    <Label Text="{Binding Name}" 
                        HeightRequest="30" 
                        FontSize="18"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>
                </StackLayout>
            </DataTemplate>
        </BindableLayout.ItemTemplate>
    </FlexLayout>



