<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Streak"
             xmlns:models="clr-namespace:Streak.Models"
             x:Class="Streak.GoalsPage">

    <ContentPage.Resources>
        <DataTemplate x:Key="checkedDataTemplate">
            <StackLayout FlexLayout.Basis="33%" Padding="10" Spacing="10" HeightRequest="180" WidthRequest="140">
                <Button BorderWidth="0" Text="{Binding CurrentStreak}" Pressed="OnItemPressed" Released="OnItemReleased" />
                <Label Text="{Binding Name}" 
                    HeightRequest="30" 
                    FontSize="18"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </StackLayout>
        </DataTemplate>
        <DataTemplate x:Key="uncheckedDataTemplate">
            <StackLayout  FlexLayout.Basis="33%" Padding="10" Spacing="10" HeightRequest="180" WidthRequest="140">
                <Button BorderColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" 
                        BorderWidth="3" 
                        Background="Transparent" 
                        Text="{Binding CurrentStreak}" 
                        TextColor="Black" 
                        Pressed="OnItemPressed" 
                        Released="OnItemReleased" />
                <Label Text="{Binding Name}" 
                    HeightRequest="30" 
                    FontSize="18"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </StackLayout>
        </DataTemplate>
        <DataTemplate x:Key="createButtonDataTemplate">
            <StackLayout FlexLayout.Basis="33%" Padding="10" Spacing="10" HeightRequest="180" WidthRequest="140">
                <Button Text="+" FontSize="Large" Clicked="OnItemAdded"/>
            </StackLayout>
        </DataTemplate>
        <local:GoalTemplateSelector x:Key="goalTemplateSelector"
                                  CheckedTemplate="{StaticResource checkedDataTemplate}"
                                  UncheckedTemplate="{StaticResource uncheckedDataTemplate}"
                                  CreateButtonTemplate="{StaticResource createButtonDataTemplate}" />

    </ContentPage.Resources>
    <ScrollView>
    <StackLayout Padding="10, 0">
        <Label Text="Streak"/>
            <FlexLayout BindableLayout.ItemsSource="{Binding Goals}" 
                        BindableLayout.ItemTemplateSelector="{StaticResource goalTemplateSelector}"
                        Direction="Row" 
                        Wrap="Wrap" 
                        AlignContent="Start"/>
    </StackLayout>
    </ScrollView>
</ContentPage>